# Docker Image Configuration
BUILD_TYPE=dev
PHP_VERSION=8.4

# PHP Configuration
PHP_MAX_EXECUTION_TIME=60
PHP_MEMORY_LIMIT=512M
PHP_POST_MAX_SIZE=200M
PHP_UPLOAD_MAX_FILESIZE=200M

# Xdebug Configuration (dev/full only)
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_ENABLE=1
XDEBUG_MODE=debug,develop

# Apache Configuration
APACHE_DOCUMENT_ROOT=/var/www/app/web
APACHE_SERVER_NAME=localhost
SERVER_NAME=example.com

# Database Connection
DB_DSN=mysql:host=mysql;dbname=yii2
DB_PASSWORD=secret
DB_USERNAME=yii2

# MSSQL Configuration (optional, full build only)
MSSQL_DSN=

# MySQL Configuration
MYSQL_DATABASE=yii2
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=yii2

# PostgreSQL Configuration (optional)
POSTGRES_DB=yii2
POSTGRES_PASSWORD=secret
POSTGRES_USER=yii2

# Ports Configuration
APP_PORT_DEV=8080
APP_PORT_FULL=8082
APP_PORT_PROD=8081
MYSQL_PORT=3306
POSTGRES_PORT=5432
REDIS_PORT=6379

# Oracle Configuration (optional, full build only)
ORACLE_DSN=

# Redis Configuration
REDIS_DATABASE=0
REDIS_HOST=redis
REDIS_PORT=6379

# Yii2 Configuration
YII_DEBUG=true
YII_ENV=dev
