#==============================================================================
# Docker Environment Variables
#==============================================================================

# Apache Configuration
APACHE_ACCESS_LOG=/proc/self/fd/1               # Access log file (stdout)
APACHE_DOCUMENT_ROOT=/var/www/app/web           # Document root
APACHE_ERROR_LOG_FILE=/proc/self/fd/2           # Error log file (stdout)
APACHE_LOCK_DIR=/var/lock/apache2               # Lock directory
APACHE_PID_FILE=/var/run/apache2/apache2.pid    # PID file
APACHE_RUN_DIR=/var/run/apache2                 # Run directory
APACHE_RUN_GROUP=www-data                       # Run group
APACHE_RUN_USER=www-data                        # Run user

# Docker Build Configuration
BUILD_TYPE=dev                                  # Options: dev, prod, full
ENABLE_HEALTH_ENDPOINT=true                     # Enable health check endpoint
PHP_VERSION=8.4                                 # PHP version

# PHP Core Configuration
PHP_MAX_EXECUTION_TIME=60                       # Max execution time in seconds
PHP_MAX_FILE_UPLOADS=20                         # Max number of simultaneous uploads
PHP_MAX_INPUT_TIME=60                           # Max input parsing time
PHP_MAX_INPUT_VARS=10000                        # Max number of input variables
PHP_MEMORY_LIMIT=512M                           # PHP memory limit
PHP_POST_MAX_SIZE=100M                          # Max POST size
PHP_UPLOAD_MAX_FILESIZE=100M                    # Max file upload size

# PHP Error Configuration
PHP_DISPLAY_ERRORS=on                           # Display errors
PHP_DISPLAY_STARTUP_ERRORS=off                  # Display startup errors
PHP_ERROR_LOG=/proc/self/fd/2                   # Error log location
PHP_ERROR_REPORTING=E_ALL & ~E_DEPRECATED       # Error reporting level
PHP_EXPOSE=off                                  # Expose PHP
PHP_LOG_ERRORS=on                               # Log errors

# PHP Security Configuration
PHP_ALLOW_URL_FOPEN=on                          # Allow URL file operations
PHP_ALLOW_URL_INCLUDE=off                       # Allow URL includes
PHP_DATE_TIMEZONE=UTC
PHP_DISABLE_FUNCTIONS=exec,passthru,shell_exec,system,proc_open,popen,parse_ini_file,show_source

# PHP Session Configuration
PHP_SESSION_HANDLER=files                       # Save handler
PHP_SESSION_PATH=/var/lib/php/sessions          # Save path

# PHP-FPM Configuration
PHP_FPM_ACCESS_LOG=/proc/self/fd/1              # FPM access log
PHP_FPM_CATCH_OUTPUT=yes                        # Catch worker output
PHP_FPM_IDLE_TIMEOUT=10s                        # Idle timeout for ondemand pm
PHP_FPM_LOG_LEVEL=warning                       # FPM log level
PHP_FPM_MAX_CHILDREN=50                         # Max child processes
PHP_FPM_MAX_REQUESTS=500                        # Max requests per child
PHP_FPM_MAX_SPARE=35                            # Max spare servers
PHP_FPM_MIN_SPARE=5                             # Min spare servers
PHP_FPM_PING_PATH=/fpm-ping                     # FPM ping page path
PHP_FPM_PM=dynamic                              # Process manager
PHP_FPM_REQUEST_TIMEOUT=30                      # Request timeout
PHP_FPM_RLIMIT_FILES=131072                     # Resource limit for open files
PHP_FPM_SLOWLOG_TIMEOUT=5s                      # Slow log timeout
PHP_FPM_START_SERVERS=5                         # Number of initial child processes
PHP_FPM_STATUS_PATH=/fpm-status                 # FPM status page path
